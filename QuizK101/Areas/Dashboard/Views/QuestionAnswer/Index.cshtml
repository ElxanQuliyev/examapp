@model List<QuizK101.Models.Exam>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>
<a href="@Url.Action("Create")">Create Question</a>

<table class="table">
    <tr>
        <th>Subject</th>
        <th>
            Exam Name
        </th>
        <th>Exam Date</th>
        <th>
            Question Count
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Subject.SubjectName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExamTime)
    </td>
    <td>
        @item.Questions.Count()
    </td>
    <td>
        @Html.ActionLink("Edit", "ShowQuestionExam", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
    }

</table>